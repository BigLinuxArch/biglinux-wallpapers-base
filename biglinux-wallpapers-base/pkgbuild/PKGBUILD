# Maintainer: Bruno Goncalves <bigbruno@gmail.com>

pkgname=biglinux-wallpapers-base
pkgver=24.11.11
pkgrel=0324
arch=('any')
license=('GPL')
url="https://github.com/biglinux/biglinux-wallpapers-base"
pkgdesc="Extra wallpapers to BigLinux"
source=("git+https://github.com/biglinux/biglinux-wallpapers-base.git#branch=stable-2024-11-11_00-22")
makedepends=("git")
md5sums=(SKIP)

package() {
    # Verify default folder
    if [ -d "${srcdir}/${pkgname}/${pkgname}" ]; then
        InternalDir="${srcdir}/${pkgname}/${pkgname}"
    else
        InternalDir="${srcdir}/${pkgname}"
    fi


    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}

